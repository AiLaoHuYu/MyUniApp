.upper-box {
  position: relative;
  width: 100%;
  height: 400rpx;
  border-bottom-right-radius: 50rpx;
  border-bottom-left-radius: 50rpx;
  background: linear-gradient(to right, #2859fe, #1ba0ff);
}
.upper-box .tip-box {
  padding: 50rpx 0 0 50rpx;
}
.upper-box .tip-box .tip {
  font-size: 50rpx;
  line-height: 100rpx;
  color: #FFFFFF;
}
.upper-box .tip-box .btn {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 250rpx;
  height: 60rpx;
  border-radius: 50rpx;
  color: #2859fe;
  background-color: #FFFFFF;
}
.upper-box .setting {
  position: absolute;
  top: 50rpx;
  right: 50rpx;
}
.upper-box .setting image {
  width: 60rpx;
  height: 60rpx;
}
.lower-box {
  position: relative;
  top: -80rpx;
  padding: 0 20rpx;
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
}
.lower-box .menu {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  margin: 30rpx;
  width: 250rpx;
  height: 300rpx;
  background-color: #FFFFFF;
  border-radius: 30rpx;
  box-shadow: 0 5rpx 15rpx #e1e1e1;
}
.lower-box .menu image {
  width: 120rpx;
  height: 120rpx;
}
.lower-box .menu text {
  font-size: 28rpx;
  padding-top: 50rpx;
}