
.container {
		/* 定义flex容器 */
		display: flex;
		flex-direction: column;
		background-color: lightgray;
		width: 100%;
		height: 100%;
		/*设置容器内部容器的排列方向*/
}
.item-parent {
		display: inline-flex;
		flex-direction: row;
		width: 300rpx;
		padding: 20rpx;
		border-radius: 10rpx;
		justify-content: center;
		align-items: center;
		background: linear-gradient(90deg, #5c83ba, #c4d2ec, #f2f1ed);
}
.item-img {
		width: 100rpx;
		height: 100rpx;
}
.item-text {
		margin-right: 40rpx;
		color: #000;
		font-weight: bold;
		font-size: 28rpx;
}
.unin-column {
		display: inline-flex;
		flex-direction: column;
		background-color: white;
		margin-top: 20rpx;
}
.item-row {
		display: inline-flex;
		flex-direction: row;
		flex-wrap: wrap;
		background-color: white;
		padding: 15rpx;
}
.unin-row {
		display: inline-flex;
		flex-direction: row;
		flex-wrap: wrap;
		padding-top: 20rpx;
		line-height: 40rpx;
}
.uni-row-item {
		display: inline-flex;
		flex-direction: column;
		width: 25%;
		height: auto;
		align-items: center;
		justify-content: center;
}
.row-image {
		width: 70rpx;
		height: 70rpx;
}
.image-parent {
		width: 80rpx;
		height: 80rpx;
		display: inline-flex;
		align-items: center;
		justify-content: center;
		padding: 10rpx;
		border-radius: 8rpx;
}
.row-text {
		font-size: 24rpx;
		padding-top: 5rpx;
		font-family: Arial, Helvetica, sans-serif;
		text-align: center;
}
.row-item-title {
		font-size: 30rpx;
		padding: 15rpx;
		font-family: Arial, Helvetica, sans-serif;
		font-weight: bold;
}
